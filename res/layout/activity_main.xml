<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valleyzapotectalkingdictionary.MainActivity" >

    <!-- 
    <fragment 
        android:name="com.example.valleyzapotectalkingdictionary.SearchFragment"
        android:id="@+id/search_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
        -->
    
    <EditText
        android:id="@+id/searchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/wordOfTheDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:text="@string/wordOfTheDay_eng"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="44dp"
        android:text="@string/app_name_eng"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/appTitle"
        android:layout_alignTop="@+id/searchBox"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha"
        android:onClick="searchWord" />

    <TextView
        android:id="@+id/wordOfTheDay_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/appTitle"
        android:layout_below="@+id/wordOfTheDay"
        android:layout_marginTop="23dp"
        android:text="bdua"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/wordOfTheDay_orthography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchBox"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"
        android:text="[bdùùa’]" />

</RelativeLayout>