<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valleyzapotectalkingdictionary.UpdateActivity" >

    <TextView
        android:id="@+id/updateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="The Valley Zapotec Talking Dictionary is constantly growing. Each time you update, the new words will take up more space on your phone. If space is a concern, you may choose if you want to download audio and pictures." />

    <CheckBox
        android:id="@+id/downloadPicturesCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/updateText"
        android:layout_below="@+id/updateText"
        android:layout_marginTop="26dp"
        android:checked="true"
        android:text="Download audio" />

    <CheckBox
        android:id="@+id/downloadAudioCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/downloadPicturesCheckbox"
        android:layout_below="@+id/downloadPicturesCheckbox"
        android:checked="true"
        android:text="Download pictures" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downloadAudioCheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Update" />

</RelativeLayout>
